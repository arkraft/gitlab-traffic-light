{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "declaration": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "inlineSources": true,
        "inlineSourceMap": true,
        "allowJs": true,
        "noLib": false,
        "outDir": "bin/"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "bin/**"
    ],
    "compileOnSave": true
}